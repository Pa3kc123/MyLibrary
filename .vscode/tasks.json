{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "linux": {
                "args": [
                    "-d", "${workspaceFolder}/bin/production",
                    "-sourcepath", "${workspaceFolder}/src",
                    "-bootclasspath", "${env:JAVA_HOME}/jre/lib/rt.jar",
                    "${workspaceFolder}/src/sk/pa3kc/mylibrary/*.java",
                    "${workspaceFolder}/src/sk/pa3kc/mylibrary/myregex/*.java"
                ]
            },
            "windows": {
                "args": [
                    "-d", "${workspaceFolder}\\bin\\production",
                    "-sourcepath", "${workspaceFolder}\\src",
                    "-bootclasspath", "${env:JAVA_HOME}\\jre\\lib\\rt.jar",
                    "${workspaceFolder}\\src\\sk\\pa3kc\\mylibrary\\*.java",
                    "${workspaceFolder}\\src\\sk\\pa3kc\\mylibrary\\myregex\\*.java"
                ]
            },
            "args": [
                "-source", "1.6",
                "-target", "1.6",
            ]
        },
        {
            "label": "generate jar",
            "type": "shell",
            "command": "jar",
            "linux": {
                "args": [
                    "-cfve",
                    "bin/MyLibrary.jar",
                    "sk.pa3kc.mylibrary.Universal",
                    "-C", "bin/production", "."
                ]
            },
            "windows": {
                "args": [
                    "-cfve",
                    "bin\\MyLibrary.jar",
                    "sk.pa3kc.mylibrary.Universal",
                    "-C", "bin\\production", "."
                ]
            },
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}