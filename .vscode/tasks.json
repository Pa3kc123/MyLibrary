{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "linux": {
                "args": [
                    "-d", "${workspaceFolder}/out/production",
                    "-sourcepath", "${workspaceFolder}/src",
                    "-bootclasspath", "C:/Program Files/Java/jdk1.8.0_192/jre/lib/rt.jar",
                    "-source", "1.6",
                    "-target", "1.6",
                    "${workspaceFolder}/src/sk/pa3kc/mylibrary/*.java",
                    "${workspaceFolder}/src/sk/pa3kc/mylibrary/myregex/*.java"
                ]
            },
            "args": [
                "-d", "${workspaceFolder}\\out\\production",
                "-sourcepath", "${workspaceFolder}\\src",
                "-bootclasspath", "C:\\Program Files\\Java\\jdk1.8.0_192\\jre\\lib\\rt.jar",
                "-source", "1.6",
                "-target", "1.6",
                "${workspaceFolder}\\src\\sk\\pa3kc\\mylibrary\\*.java",
                "${workspaceFolder}\\src\\sk\\pa3kc\\mylibrary\\myregex\\*.java"
            ]
        },
        {
            "label": "generate jar",
            "type": "shell",
            "command": "jar",
            "args": [
                "-cfve",
                "out/MyLibrary.jar",
                "sk.pa3kc.mylibrary.Universal",
                "-C", "out/production", "."
            ],
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}